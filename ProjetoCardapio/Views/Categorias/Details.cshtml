@model ProjetoCardapio.Models.Categoria

@{
    ViewData["Title"] = "Detalhes";
}

<div>
    <h4 class="display-5">Detalhes da categoria: @Html.DisplayFor(model => model.NomeDaCategoria)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDaCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDaCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoDaCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoDaCategoria)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark">Editar</a>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>
