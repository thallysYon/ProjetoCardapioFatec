@model ProjetoCardapio.Models.Categoria

@{
    ViewData["Title"] = "Criar Categoria";
}

<h1 class="display-6 text-center">Categorias</h1>

<hr />

<h4>Criar</h4>

<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeDaCategoria" class="control-label">Nome</label>
                <input asp-for="NomeDaCategoria" class="form-control" />
                <span asp-validation-for="NomeDaCategoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescricaoDaCategoria" class="control-label">Descrição</label>
                <input asp-for="DescricaoDaCategoria" class="form-control" />
                <span asp-validation-for="DescricaoDaCategoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-dark mt-3" />
            
                <a asp-action="Index" class="btn btn-dark mt-3">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
