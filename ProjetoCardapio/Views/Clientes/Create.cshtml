@model ProjetoCardapio.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<h1 class="display-6 text-center">Clientes</h1>

<hr />

<h4>Criar</h4>

<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeDoCliente" class="control-label">Nome</label>
                <input asp-for="NomeDoCliente" class="form-control" />
                <span asp-validation-for="NomeDoCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroDaMesa" class="control-label">Mesa</label>
                <input asp-for="NumeroDaMesa" class="form-control" />
                <span asp-validation-for="NumeroDaMesa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-dark mt-3" />
                <a asp-action="Index" class="btn btn-dark mt-3">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
